<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguel2.listacontactos.MainActivity">


    <Button
        android:id="@+id/btFazLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:text="@string/entrar"
        android:textSize="14pt"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="-7dp" />


    <EditText
        android:id="@+id/etLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="LOGIN"
        android:layout_above="@+id/etPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btFazLogin"
        android:layout_alignLeft="@+id/etLogin"
        android:layout_alignStart="@+id/etLogin"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Plataforma BOVINFOR"
        android:textSize="14pt"
        android:textAlignment="center"
        android:textColor="#223997"/>


</RelativeLayout>
